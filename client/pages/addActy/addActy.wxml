<!--pages/addActy/addActy.wxml-->
<view>
  <image src="{{imgTempPath}}" class="activity-pic" mode="aspectFill" bindtap="chooseImg"/>
</view>

<view class="form-view">
  <form bindsubmit='addActySubmit' style='background-color:red;height:200rpx'>
    <view class="input-view">
      活动标题:<input name="title" value="{{title}}"></input>
    </view>
    <view class="input-view">
      活动人数:<input name="maxNum" value="{{maxNum}}"/>
    </view>
    <view class="picker-view">选择时间:
      <picker mode="time" value="{{time}}" bindchange="bindTimeChange">{{time}}</picker>
    </view>
    <view class="picker-view">选择日期:
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">{{date}}</picker>
    </view>
    <view class="tags-view">
      <view class="tags-text">标签:</view>
      <view class="tags" wx:for="{{tags}}" input name="tags" value="{{tags}}">{{item}}</view>
    </view>
    <!-- <button bindtap='chooseImg'>点击选择图片</button> -->

    <!-- <image wx:if="{{imgTempPath}}" src="{{imgTempPath}}" mode="aspectFit" class="uploader-image"/> -->
    <button form-type='submit'>创建活动</button>
  </form>
</view>

