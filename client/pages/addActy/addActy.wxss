/* pages/addActy/addActy.wxss */

button{
  background: white;
  color: rgb(94, 94, 94);
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  height: 120rpx;
  line-height: 120rpx;
  border-top: solid;
  border-width: 1rpx;
  border-color: rgb(0, 0, 0);
  border-radius: 0;
}

input{
  height: 100%;
  padding-right: 20rpx;
  /* background: rgb(123, 240, 88); */
  float: right;
  text-align: right;
  font-weight: normal;
  font-size: 0.9rem;
  color: rgb(66, 66, 66);
}

picker{
  height: 100%;
  padding-right: 20rpx;
  /* background: rgb(123, 240, 88); */
  float: right;
  text-align: right;
  font-weight: normal;
  font-size: 0.9rem;
  color: rgb(66, 66, 66);
}

.activity-pic{
  width: 100%;
  height: 400rpx;
}

.input-view,.picker-view,.tags-view,.textarea-view{
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 150rpx;
  line-height: 150rpx;
  padding-left: 30rpx;
  border-top: solid;
  border-width: 1rpx;
  border-color: rgb(206, 206, 206);
  letter-spacing: 0.005rem;
  color: rgb(94, 94, 94);
  font-weight: bold;
  font-size: 0.8rem;
}

.textarea-view{
  height: auto;
}

.tags{
  float: left;
  margin-left: 100rpx;
  margin-right: 0rpx;
  margin-bottom: 30rpx;
  background-color: red;
  height: 50rpx;
  margin-top: 20rpx;
}

.submit-button{
  clear: both;
}