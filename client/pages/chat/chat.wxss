page{
  background: rgb(255, 255, 255);
}
.top-block{
  padding-bottom: 18%;
}

.message-block{
  /* background: rgb(226, 107, 107);
  border: solid; */
  margin-bottom: 30rpx;
}

.user-avatar,.user-avatar-me, .user-avatar-other{
  height: 100rpx;
  width: 100rpx; 
  border-radius: 100%;
  box-shadow:2px 2px 8px rgb(196, 196, 196);
}

.user-avatar-me{
  margin-right: 30rpx;
  float: right;
}

.user-avatar-other{
  margin-left: 30rpx;
  float: left;
}

.message-text, .message-text-me, .message-text-other{
  background: white;
  max-width: 450rpx;
  margin: 20rpx;
  padding: 20rpx;
  position: relative;
  /* top: 30rpx; */
  box-shadow:1px 2px 8px rgb(189, 188, 188);
  color: rgb(34, 34, 34);
  font-family: "微软雅黑";
  font-size: 30rpx;
  word-break: break-all;
}

.message-text-me{
  border-radius: 8px 0px 8px 8px / 8px 0px 8px 8px;
background-image: linear-gradient(-225deg, #9EFBD3 0%, #57E9F2 48%, #45D4FB 100%);
  float: right;
}

.message-text-other{
  border-radius: 0px 8px 8px 8px / 8px 8px 8px 8px;
background: linear-gradient(to bottom, #D5DEE7 0%, #E8EBF2 50%, #E2E7ED 100%), linear-gradient(to bottom, rgba(0,0,0,0.02) 50%, rgba(255,255,255,0.02) 61%, rgba(0,0,0,0.02) 73%), linear-gradient(33deg, rgba(255,255,255,0.20) 0%, rgba(0,0,0,0.20) 100%);
 background-blend-mode: normal,color-burn;
  float: left;
}

.message-edit-block{
  display: table;
  position: fixed;
  top: 90%;
  width: 100%;
  height: 10%;
  box-shadow:1px -1px 8px rgb(221, 221, 221);
}

.message-input{
  top: 90%;
  height: 100%;
  width: 80%;
  float: left;
  background: white;
}

.send-button{
  height: 100%;
  width: 20%;
  float: left;
  display:flex;
  align-items:center;
  justify-content:center;
  color: rgb(102, 102, 102);
  letter-spacing: 0.1rem;
  background: white;
}
