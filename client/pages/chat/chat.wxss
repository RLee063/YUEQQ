page{
  background: rgb(255, 255, 255);
}

.message-block{
  /* background: rgb(226, 107, 107);
  border: solid; */
  margin-bottom: 20rpx;
}

.user-avatar,.user-avatar-me, .user-avatar-other{
  height: 100rpx;
  width: 100rpx; 
  border-radius: 100%;
  box-shadow:2px 2px 8px rgb(196, 196, 196);
}

.user-avatar-me{
  margin-right: 30rpx;
  float: right;
}

.user-avatar-other{
  margin-left: 30rpx;
  float: left;
}

.message-text, .message-text-me, .message-text-other{
  background: white;
  width: 500rpx;
  margin: 20rpx;
  padding: 20rpx;
  position: relative;
  /* top: 30rpx; */
  box-shadow:1px 3px 10px rgb(189, 188, 188);
  color: rgb(34, 34, 34);
  font-family: "微软雅黑";
  font-size: 30rpx;
}

.message-text-me{
  border-radius: 8px 0px 8px 8px / 8px 0px 8px 8px;
  background: rgb(96, 162, 224);
  float: right;
}

.message-text-other{
  border-radius: 0px 8px 8px 8px / 8px 8px 8px 8px;
  float: left;
}



.message-edit-block{
  display: table;
  position: fixed;
  top: 90%;
  width: 100%;
  height: 10%;
  box-shadow:1px -2px 8px rgb(221, 221, 221);
}

.message-input{
  top: 90%;
  height: 100%;
  width: 80%;
  float: left;
}

.send-button{
  height: 100%;
  width: 20%;
  float: left;
  display:flex;
  align-items:center;
  justify-content:center;
  color: rgb(102, 102, 102);
  letter-spacing: 0.1rem;
  background: white;
}
