/* client/pages/message/message.wxss */
.info-block{
  position: relative;
  height: 150rpx;
  width: 95%;
  margin: auto;
  /* background: rgb(216, 108, 108);
  border: solid; */
}

.avatar-block{
  float: left;
  height: 100%;
  width: 155rpx;
  /* background: pink; */
}

.text-block{
  float: left;
  height: 100%;
  width: 75%;
  /* background: rgb(243, 239, 22); */
}

.avatar-image{
  height: 110rpx;
  width: 110rpx; 
  border-radius: 100%;
  float: left;
  margin: 20rpx;
}

.name-text{
  margin-top: 30rpx;
  margin-left: 5rpx;
  line-height: 50rpx;
  /* background: rgb(100, 196, 100); */
  color: rgb(46, 46, 46);
  font-size: 31rpx;
  font-weight: bold;
  letter-spacing: 0.05rem;
  float: left;
}

.motto-text {
  margin-bottom: 30rpx;
  line-height: 50rpx;
  clear: both;
  /* background: rgb(97, 167, 199); */
  color: rgb(59, 59, 59);
  font-size: 28rpx;
  letter-spacing: 0.01rem;
}

.message-uname{
  clear: both;
}

.follow-block-size,.follow-block,.unfollow-block{
  position: absolute;
  font-size: 25rpx;
  border: solid;
  border-width: thin;
  border-radius: 8rpx 8rpx 8rpx 8rpx /8rpx 8rpx 8rpx 8rpx ;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  left: 580rpx;
  top: 50rpx;
}

.follow-block{
  border-color: rgb(129, 209, 255);
  color: rgb(129, 215, 255);
}

.unfollow-block{
  border-color: rgb(255, 132, 132);
  color: rgb(255, 123, 123);
}