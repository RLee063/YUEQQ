<view wx:for="{{activitiesArray}}">
  <view class="activity-block"  bindtap="tapActivity" data-aid="{{item.aid}}">
    <view class="type-card-basketball" wx:if="{{item.sportType == 0}}">
      <image src="../../images/basketball.svg" class="type-card-image" mode="aspectFit"></image>
    </view>
    <view class="type-card-badminton" wx:if="{{item.sportType == 1}}">
      <image src="../../images/badminton.svg" class="type-card-image" mode="aspectFit"></image>
    </view>
    <view class="type-card-tabletennis" wx:if="{{item.sportType == 2}}">
      <image src="../../images/tabletennis.svg" class="type-card-image" mode="aspectFit"></image>
    </view>
    <view class="type-card-tennis" wx:if="{{item.sportType == 3}}">
      <image src="../../images/tennis.svg" class="type-card-image" mode="aspectFit"></image>
    </view>
    <view class="type-card-football" wx:if="{{item.sportType == 4}}">
      <image src="../../images/football.svg" class="type-card-image" mode="aspectFit"></image>
    </view>
    <view class="type-card-running" wx:if="{{item.sportType == 5}}">
      <image src="../../images/running.svg" class="type-card-image" mode="aspectFit"></image>
    </view>

    <view class="activity-mid-block">
      <image src="{{item.picUrl}}" class="activity-pic" mode="aspectFill"></image>
    </view>

    <view class="user-head-image-block" bindtap="viewUserInfo" data-uid="{{item.creatorUid}}">
      <image src="{{item.avatarUrl}}" class="user-head-image"></image>
    </view>

    <view class="activity-buttom-block">
      <view class="activity-title">{{item.title}}
      </view>
      <view>
        <view class="activity-time">{{item.startTime}}
        </view>
        <view class="activity-num">{{item.currentNum}}/{{item.maxNum}}
        </view >
        <image class= "num-pic" src="../../images/人群.png"></image>
      </view>
    </view>
  </view> 
</view>
<view class="add-activity-block">
  <image src="../../images/tabbar_b_s.png" class="add-activity-pic" bindtap='addActy'></image>
</view>