/* ------------- */
page{
  background:white;
}

::root{
  --bar: 80rpx;
}

::-webkit-scrollbar{
  display:none;
}

.user-head-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.type-card-image{
  width: 70%;
  height: 70%;
  margin-left: 15%;
  margin-top: 11.25%;
}

.activity-title{
  /* margin-top: 10rpx; */
  position: relative;
  top: 18%;
  left: 24%;
  color: rgb(34, 34, 34);
  font-family: "黑体";
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.activity-time{
  /* padding-top: 15rpx; */
  position: relative;
  top: 35rpx;
  left: 24%;
  color: rgb(92, 92, 92);
  font-family: "微软雅黑";
  font-size: 28rpx;
  float: left;
}

.activity-num{
  position: relative;
  color: rgb(99, 99, 99);
  font-family: "微软雅黑";
  float: right;
  font-size: 30rpx;
  font-weight: bold;
  top: 30rpx;
}

.activity-pic{
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  height: 100%;
  width: 100%;
}

.num-pic{
  position: relative;
  float: right;
  width: 40rpx;
  height: 50rpx;
  right: 5rpx;
  top: 26rpx;
}
/*--------------------------------------*/
.type-card, .type-card-basketball, .type-card-badminton, .type-card-tabletennis, .type-card-tennis, .type-card-football, .type-card-running{
  position: absolute;
  width: 120rpx;
  height: 90rpx;
  left: 520rpx;
  top: -10rpx;
  box-shadow: -1px 2px 10px -1px rgb(0, 0, 0);
}

.type-card-basketball{
  background-image: linear-gradient(to bottom left, #913b71 0%, #7835cf 100%);
}

.type-card-badminton{
background-image: linear-gradient(to top right, #1c65a0 0%, #3890c4 100%);
}

.type-card-tabletennis{
  background-image: linear-gradient(to right top, #f39548 0%, #fecb40 100%);
}

.type-card-tennis{
  background-image: linear-gradient(to top right, #0ba360 0%, #3cba92 100%);
}

.type-card-running{
background-image: linear-gradient(to right top, #4a4e50 100%, #868f96 0%);
}

.type-card-football{
  background-image: linear-gradient(to top right, #e483b0 0%, #f55757 100%);
}
.activity-block {
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  position: relative;
  height: 330rpx;
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 70rpx;
  background-color: rgb(255, 255, 255); 
  box-shadow:-1px 3px 10px -1px rgb(173, 173, 173);
}

.user-head-image-block{
  height: 120rpx;
  width: 120rpx; 
  top: 50%;
  left: 30rpx;
  border-radius: 100%;
  float: left;
  position: absolute;
  /* box-shadow:-2px 1px 10px  rgb(0, 0, 0); */
  border: solid;
  border-color: white;
  
}

.activity-mid-block{
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  height: 60%;
  box-shadow:1px 1px 10px rgb(255, 255, 255);
}

.activity-buttom-block{
  /* border-radius: 0px 0px 5px 5px / 0px 0px 5px 5px; */
  /* padding-top: 10rpx; */
  padding-left: 20rpx;
  padding-right: 30rpx;
  height: 40%;
  box-shadow:1px 1px 6px rgb(255, 255, 255);
  background-color: rgb(255, 255, 255);
}
/* ------------------ */

.add-activity-block{
  position: fixed;
  height: 120rpx;
  width: 120rpx;
  top: 85%;
  left: 85%;
  margin-left: -50rpx;
}

.add-activity-pic{
  height: 100%;
  width: 100%;
  border-radius: 100%;
  /* box-shadow:-1px 2px 10px rgb(0, 0, 0); */
}