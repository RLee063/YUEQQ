/* ------------- */
page{
  background:white;
}

::root{
  --bar: 80rpx;
}

::-webkit-scrollbar{
  display:none;
}

/* ============================================ */
.user-head-image {
  width: 103%;
  height: 102%;
  border-radius: 50%;
}

.sport-type{
  width: 80rpx;
  height: 40rpx;
  border-top: solid;
  border-width: 1rpx;
  float: right;
  margin-top: 15rpx;
  margin-right: 20rpx;
  color: #ff9933;
  font-size: 80%;
  text-align: center;
  font-family: "微软雅黑";
  letter-spacing: 5rpx;
  line-height: 60rpx;
}

.activity-header{
  color: rgb(34, 34, 34);
  font-family: "黑体";
  font-size: 35rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.activity-time{
  padding-top: 10rpx;
  color: rgb(129, 129, 129);
  font-family: "微软雅黑";
  font-size: 30rpx;
  float: left;
  font-weight: bold;
  padding-left: 0rpx;
  letter-spacing: 2rpx;
}

.activity-num{
  color: rgb(145, 145, 145);
  font-family: "微软雅黑";
  float: right;
  font-size: 30rpx;
  font-weight: bold;
  padding-top: 5rpx;
}

.activity-tags{
  height: 45rpx;

  font-family: "微软雅黑";
  float: left;
  color: rgb(255, 123, 0);
  font-size: 80%;
  letter-spacing: 2rpx;
  font-weight: bold;

  padding-left: 10rpx;
  padding-right: 10rpx; 
  padding-top: 10rpx;
  margin-right: 20rpx;
  
  background-color: rgb(247, 247, 247);
  border-radius: 20%;
}

.activity-pic{
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  height: 100%;
  width: 100%;
}

.num-pic{
  float: right;
  width: 45rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
/*--------------------------------------*/

.activity-block {
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  height: 350rpx;
  width: 90%;
  margin: auto;
  margin-top: 10rpx;
  margin-bottom: 150rpx;
  background-color: rgb(255, 255, 255); 
  box-shadow:-5px 8px 10px 0px rgb(173, 173, 173);
}

.user-head-image-block{
  height: 120rpx;
  width: 120rpx; 
  top: 180rpx;
  left: 100rpx;
  border-radius: 100%;
  float: left;
  position: relative;
  top: -100rpx;
}

.activity-mid-block{
  /* border-radius: 6px 6px 0px 0px / 6px 6px 0px 0px; */
  height: 60%;
  box-shadow:1px 1px 6px rgb(255, 255, 255);
}

.activity-buttom-block{
  /* border-radius: 0px 0px 5px 5px / 0px 0px 5px 5px; */
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
  height: 40%;
  box-shadow:1px 1px 6px rgb(255, 255, 255);
  background-color: rgb(255, 255, 255);
}

.activity-buttom-buttom-block{
  padding-top: 20rpx;
  font-family: "微软雅黑";
  clear: both;
  font-size: 30rpx;
  background-color: rgb(255, 255, 255);
}
/* ------------------ */

.add-activity-block{
  position: fixed;
  height: 120rpx;
  width: 120rpx;
  top: 85%;
  left: 85%;
  margin-left: -50rpx;
}

.add-activity-pic{
  height: 100%;
  width: 100%;
  border-radius: 100%;
  box-shadow:-1px 3px 10px rgb(109, 109, 109);
}