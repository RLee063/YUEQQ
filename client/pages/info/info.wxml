<view class='container' style="background-image: url({{imgTempPath}}); background-size:  100%  480rpx">


  <view>
    <image src='photo.png' style='width:25px;height:25px' class='photo' bindtap="changebackground"></image>
  </view>

  <view class='down'>
    <image class="userinfo-avatar" src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}" background-size="cover"></image>
  </view>

  <view class='loginshow'>
    <text class="userinfo-nickname-logged" wx:if="{{logged}}">{{userInfo.nickName}}  </text>
    <image wx:if='{{sex==1}}' src='sex1.png' style='width:25px;height:25px' class='sex'></image>
    <image wx:else src='sex2.png' style='width:25px;height:25px' class='sex'></image>
  </view>



  <view class="allinfo">
    <view class="allinfo-text">
      <text>电话:   </text>
      <text wx:if="{{phone}}">{{phone}}</text>
      <modal hidden="{{hiddenmodalput}}" title="请输入手机号" confirm-text="确认" cancel-text="清空" bindcancel="cancelphone" bindconfirm="confirmphone">
        <input type='text' placeholder="请输入" bindinput='getphone'></input>
      </modal>
      <image bindtap='addphone' src='setting.png' class='changeinfo'></image>
    </view>
  </view>

  <view class="allinfo">
    <view class="allinfo-text">
      <text>年级:  </text>
      <text wx:if="{{grade}}">{{grade}}</text>
      <action-sheet hidden="{{actionSheetHidden2}}" bindchange="listenerActionSheet2">
        <action-sheet-item bindtap='setgrade' data-grade='大一'>大一 </action-sheet-item>
        <action-sheet-item bindtap='setgrade' data-grade='大二'>大二 </action-sheet-item>
        <action-sheet-item bindtap='setgrade' data-grade='大三'>大三 </action-sheet-item>
        <action-sheet-item bindtap='setgrade' data-grade='大四'>大四 </action-sheet-item>
        <action-sheet-item bindtap='setgrade' data-grade='研究生'>研究生 </action-sheet-item>
        <action-sheet-item bindtap='setgrade' data-grade='博士生'>博士生 </action-sheet-item>
        <action-sheet-cancel>取消</action-sheet-cancel>
      </action-sheet>
      <image bindtap='addgrade' src='setting.png' class='changeinfo'></image>

    </view>
  </view>

  <view class="allinfo">
    <view class="allinfo-text">
      <text>学院:  </text>
      <text wx:if="{{collage}}">{{collage}}</text>
      <action-sheet hidden="{{actionSheetHidden}}" bindchange="listenerActionSheet">
        <action-sheet-item bindtap='setcollage' data-name='计算机科学与技术学院'>计算机科学与技术学院 </action-sheet-item>
        <action-sheet-item bindtap='setcollage' data-name='自动化学院'>自动化学院</action-sheet-item>
        <action-sheet-item bindtap='setcollage' data-name='外国语学院'>外国语学院</action-sheet-item>
        <action-sheet-item bindtap='setcollage' data-name='通信学院'>通信学院</action-sheet-item>
        <action-sheet-cancel>取消</action-sheet-cancel>
      </action-sheet>
      <image bindtap='addcollage' src='setting.png' class='changeinfo'></image>

    </view>
  </view>

  <view class="allinfo">
    <view class="allinfo-text-motto">
      <text>个性签名:   </text>
      <image bindtap='addmotto' src='setting.png' class='changeinfo-motto'></image>
      <view wx:if="{{motto}}">{{motto}}</view>
    </view>
  </view>

  <view class="allinfo">
    <view class="allinfo-text">
      <text>评级：</text>
      <text bindtap='scoreinfo' class='knowmore'>了解更多</text>

      <view wx:if="{{score==1}}">
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
      </view>

      <view wx:elif="{{score==2}}">
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>

      </view>

      <view wx:elif="{{score==3}}">
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
      </view>

      <view wx:elif="{{score==4}}">
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestar.png' style='width:15px;height:15px'></image>
      </view>


      <view wx:elif="{{score==5}}">
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
        <image src='scorestarlighted.png' style='width:15px;height:15px'></image>
      </view>
    </view>
  </view>

  <view class='save' bindtap='saveinfo'>
      <button class='savebutton'>保存</button>
  </view>

</view>