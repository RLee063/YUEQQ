page{
  height: 100%;
}

.father{
  position: relative;
  height: 100%;
}

.pic-block{
  height: 30%;
}

.pic{
  width: 750rpx;
  height: 100%;
}

.title{
  position: absolute;
  left: 20rpx;
  top: -10rpx;
  font-family: "microsoft yahei";
  font-size: 40rpx;
  color: white;
  -webkit-text-stroke: 0.1px rgb(0, 0, 0);
  letter-spacing: 0.2rem;
}

.avatar{
  float: left;
  height: 100rpx;
  width: 100rpx;
  margin-right: 10rpx;
  border-radius: 100%;
}

.join, .join-mask{
  position: fixed;
  bottom: 50rpx;
  left: 10%; 
  width: 80%; 
  height: 80rpx;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  color: white;
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6.65%  / 50% ;
  box-shadow: 0px 0px 10px rgb(189, 189, 189);
}

.join-mask{
  background-image: none;
}