page {
  height: 100%;
  background-color: whitesmoke;
}


.father {
  position: relative;
  height: 100%;
}

.pic-block {
  height: 30%;
}

.pic {
  width: 750rpx;
  height: 100%;
}

.title {
  position: absolute;
  left: 20rpx;
  top: -10rpx;
  font-family: "microsoft yahei";
  font-size: 40rpx;
  color: white;
  -webkit-text-stroke: 0.1px rgb(0, 0, 0);
  letter-spacing: 0.2rem;
}

.avatar {
  float: left;
  height: 100rpx;
  width: 100rpx;
  margin-right: 10rpx;
  border-radius: 100%;
}

.joinActy {
  position: fixed;
  bottom: 50rpx;
  left: 0%;
  width: 50%;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  color: white;
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  line-height: 80rpx;
  text-align: center;
  border-radius: 7% / 50%;
}

.joinRoom {
  position: fixed;
  bottom: 50rpx;
  right: 0%;
  width: 50%;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  color: white;
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  line-height: 80rpx;
  text-align: center;
  border-radius: 7% / 50%;
}

.activityclass {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 20%;
  position: relative;
  top: 10rpx;
}

.activityinfo-title {
  border-top: 4px, outset, black;
  line-height: 52px;
  font-size: 40rpx;
  color: black;
  font: '微软雅黑';
  font-weight: 500;
  letter-spacing: 5rpx;
}

.titleAndClass {
  display: flex;
  flex-direction: row;
  background-color: white;
}

.allinfo {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.detailInfo {
  height: auto;
  width: auto;
  padding: 0 0 0 20rpx;
  margin: 3rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.detailInfo-text {
  position: relative;
  left: 60rpx;
  border-top: 4px, outset, black;
  width: 100%;
  line-height: 52px;
  font-size: 29rpx;
  color: black;
  font: '微软雅黑';
  font-weight: 520;
  letter-spacing: 3rpx;
}

.detailInfo-title {
  position: relative;
  left: 20rpx;
  border-top: 4px, outset, black;
  width: 100%;
  line-height: 52px;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.534);
  font: '微软雅黑';
  font-weight: 400;
  letter-spacing: 2rpx;
}

.icon {
  position: relative;
  top: 5px;
}

.creatorInfo-avatar {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  position: relative;
  top: 30rpx;
  left: 45rpx;
}

.detailInfo-creator {
  height: auto;
  width: auto;
  padding: 0 0 0 20rpx;
  margin: 3rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  position: relative;
  bottom: 30rpx;
}

.detailInfo-creator-text {
  position: relative;
  left: 35rpx;
  border-top: 4px, outset, black;
  width: 100%;
  line-height: 52px;
  font-size: 30rpx;
  color: black;
  font: '微软雅黑';
  font-weight: 500;
  letter-spacing: 5rpx;
}

.detailInfo-joiner {
  height: auto;
  width: auto;
  padding: 0 0 0 20rpx;
  margin-top: 35rpx;
  flex-direction: row;
  align-items: flex-start;
  box-sizing: border-box;
  background-color: white;
}

.joinerInfo-avatar {
  width: 75rpx;
  height: 75rpx;
  margin-left: 5rpx;
  border-radius: 50%;
  position: relative;
  top: 30rpx;
  left: 140rpx;
}

.joinerInfo-num {
  position: relative;
  left: 160rpx;
  border-top: 4px, outset, black;
  width: 100%;
  line-height: 52px;
  font-size: 30rpx;
  color: black;
  font: '微软雅黑';
  font-weight: 500;
  letter-spacing: 5rpx;
}

.joinerInfo-avatar {
  flex-direction: row;
}

.join, .join-mask {
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  width: 80%;
  height: 80rpx;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  color: white;
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6.65%  / 50%;
  box-shadow: 0px 0px 10px rgb(189, 189, 189);
}

.join-mask {
  background-image: none;
}

.sub-mask {
  position: absolute;
  background: rgb(255, 255, 255);
  opacity: 0.5;
  height: 100%;
  width: 750rpx;
  top: 0rpx;
}

.evaluate-swiper{
  position: absolute;
  top: 25%;
  height: 50%;
  width: 100%;
}

.evaluate-item{
  height: 100%;
  margin-left: 100rpx;
  position: absolute;
}

.evaluate-block{
  height: 100%;
  width: 550rpx;
  background: rgb(255, 0, 0);
}

.end-block{
  top: 25%;
  height: 50%;
  width: 550rpx;
  position: absolute;
  margin-left: 100rpx;
  background: rgb(255, 0, 0);
}

.more{
  position: absolute;
  height: 100rpx;
  width: 100rpx;
  left: 650rpx;
  top: 0rpx;
  line-height: 100rpx;
}