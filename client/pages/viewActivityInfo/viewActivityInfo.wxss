page{
  position: relative;
  height: 100%;
  background:rgb(245, 245, 245);
}

.father{
  position: relative;
  height: 100%;
}

.canvas{
  border-radius: 50%;
  position: absolute;
  height: 170rpx;
  width: 170rpx;
  right: 20rpx;
  top: 320rpx;
  background:rgb(255, 255, 255);
  box-shadow: 0 0 10rpx rgb(158, 158, 158) inset;
  /* border: solid;
  border-width: thick;
  border-color: rgba(245, 245, 245, 0.5); */
}

.canvas-image{
  margin: 5%;
  height: 90%;
  width: 90%;
}

.pic-block{
  width: 100%;
  height: 400rpx;
  box-shadow: 0rpx 0rpx 20rpx rgb(153, 153, 153);
}

.pic{
  width: 750rpx;
  height: 100%;
}

.title{
  position: absolute;
  top: 330rpx;
  left: 30rpx;
  font-size: 43rpx;
  color: white;
  letter-spacing: 0.05rem;
  /* font-weight: 599; */
  text-shadow: 0 0 10rpx black;
}

.avatar, .avatar-signed, .avatar-unsigned{
  float: left;
  height: 100rpx;
  width: 100rpx;
  margin-right: 10rpx;
  border-radius: 100%;
}

.avatar-signed{
  border: solid;
  border-color: green;
}

.join, .join-mask{
  position: fixed;
  bottom: 50rpx;
  left: 10%; 
  width: 80%; 
  height: 80rpx;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  color: white;
  letter-spacing: 0.2rem;
  font-size: 0.9rem;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6.65%  / 50% ;
  box-shadow: 0px 0px 10px rgb(189, 189, 189);
}

.join-mask{
  background-image: none;
}

.sub-mask{
  position: absolute;
  background: rgb(255, 255, 255);
  opacity: 0.5;
  height: 100%;
  width: 750rpx;
  top: 0rpx;
}

.evaluate-swiper{
  position: absolute;
  top: 25%;
  height: 50%;
  width: 100%;
}

.evaluate-item{
  height: 100%;
  margin-left: 100rpx;
  position: absolute;
}

.evaluate-block{
  height: 100%;
  width: 550rpx;
  background: rgb(255, 0, 0);
}

.end-block{
  top: 25%;
  height: 50%;
  width: 550rpx;
  position: absolute;
  margin-left: 100rpx;
  background: rgb(255, 0, 0);
}

.more{
  position: absolute;
  height: 50rpx;
  width: 50rpx;
  right: 20rpx;
  top: 20rpx;
}